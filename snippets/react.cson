'.source.js':

  "ppeerit: import empty file":
    prefix: 'i'
    body: "import '${1:FilePath}'"

  "ppeerit: import empty":
    prefix: 'im'
    body: "import ${1:Name} from '${2:package}'"

  "ppeerit: import empty with object":
    prefix: 'imo'
    body: "import {${1:Name}} from '${2:package}'"

  "ppeerit: import react":
    prefix: 'imr'
    body: "import React from 'react'"

  "ppeerit: import react-dom":
    prefix: 'imrd'
    body: "import ReactDom from 'react-dom'"

  "ppeerit: import prop-types":
    prefix: 'imp'
    body: "import PropTypes from 'prop-types'"

  "ppeerit: constructor":
    prefix: 'cs'
    body: """
      constructor(props) {
        super(props)
      }
    """

  "ppeerit: constructor with state":
    prefix: 'css'
    body: """
      constructor(props) {
        super(props)
        this.state = {
          ${1}: ${2}
        }
      }
    """

  "ppeerit: render":
    prefix: 'rd'
    body: """
      render() {
        return (${1:<div>Component</div>})
      }
    """

  "ppeerit: state":
    prefix: 'st'
    body: """
      this.state = {
        ${1}: ${2}
      }
    """

  "ppeerit: setState":
    prefix: 'sst'
    body: """
      this.setState({
        ${1}: ${2}
      })
    """

  "ppeerit: get state":
    prefix: 'gst'
    body: "const {${1}} = this.state"

  "ppeerit: get props":
    prefix: 'gp'
    body: "const {${1}} = this.props"

  "ppeerit: fn es6 define":
    prefix: 'fnd'
    body: """
      ${1:FunctionName} = (${2}) => {
        ${3}
      }
    """

  "ppeerit: componentDidMount":
    prefix: 'cdm'
    body: """
      componentDidMount() {
          ${1}
      }
    """

  "ppeerit: componentDidMount":
    prefix: 'cdum'
    body: """
      componentWillUnmount() {
          ${1}
      }
    """

  "ppeerit: Create Component":
    prefix: 'rc'
    body: """
      import React from 'react'

      class ${1:MyComponent} extends React.Component {
        render() {
          return (${2:<div>MyComponent</div>})
        }
      }

      export default ${1}

    """

  "ppeerit: Create ReactDom":
    prefix: 'rdc'
    body: """
      import React from 'react'
      import ReactDom from 'react-dom'

      ReactDOM.render(
        ${1:<div>component</div>},
        document.getElementById('${2:app}')
      )

    """

  "ppeerit: Create Component with constructor":
    prefix: 'rcc'
    body: """
      import React from 'react'

      class ${1:MyComponent} extends React.Component {
        constructor(props) {
          super(props)
        }

        render() {
          return (${2:<div>MyComponent</div>})
        }
      }

      export default ${1}

    """

  "ppeerit: Create Component with proptypes":
    prefix: 'rccp'
    body: """
      import React from 'react'
      import PropTypes from 'prop-types'

      class ${1:MyComponent} extends React.Component {
        render() {
          return (${2:<div>MyComponent</div>})
        }
      }

      ${1}.propTypes = {}

      ${1}.defaultProps = {}

      export default ${1}

    """

  "ppeerit: set prop-types":
    prefix: "spt"
    body: """
      ${1}.propTypes = {}
    """

  "ppeerit: default prop-types":
    prefix: "dpt"
    body: """
      ${1}.defaultProps = {}
    """
